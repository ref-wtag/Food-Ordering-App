<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    tools:context=".ChoosePanelActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goToAdminPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Admin Portal"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goToUserPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to User Portal"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToAdminPanel" />
</androidx.constraintlayout.widget.ConstraintLayout>